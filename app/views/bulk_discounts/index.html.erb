<h1> <%= @merchant.name %>'s Discounts </h1>

<div>
    <li><%= link_to 'Offer New Discount', new_merchant_bulk_discount_path(@merchant) %></li>
</div>

<div>
    <% @discounts.each do |discount| %>
        <section id="discount-<%= discount.id %>">
        <li>
            <%= link_to "#{discount.name}", merchant_bulk_discount_path(@merchant, discount) %>
            <%= button_to 'Delete', merchant_bulk_discount_path(@merchant, discount), method: :delete %>
        </li>
        <p>Discount: <%= discount.discount_to_percentage %>%</p>
        <p>Threshold: <%= discount.threshold %></p>
    <% end %>
</div>